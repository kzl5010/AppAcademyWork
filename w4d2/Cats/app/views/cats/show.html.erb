
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Birth Date</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.age %></td>
    <td><%= @cat.birth_date %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td> <%= @cat.description %> </td>
  <tr>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
    <% @cat.cat_rental_requests.order("start_date").each do |request|%>
    <tr>
       <td><%= request.start_date%></td>
       <td><%= request.end_date%></td>
       <td>
        <% if request.status == "PENDING" %>
          <%= button_to "Approve", approve_cat_rental_request_url(request) %>
          <%= button_to "Deny", deny_cat_rental_request_url(request) %>
        <% else %>
          <%= request.status %>
        <% end %>
      </tr>
    <% end %>
</table>
