<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_rental_request">Cat Rental Request</label>
  <select id="cat_id" name = "cat_rental_request[cat_id]" value="<%= @cat_rental_request.cat_id%>">
    <% Cat.all.each do |cat| %>
      <% selected = @cat_rental_request.cat_id == cat.id %>
      <option <%= selected ? "selected" : "" %>
        value="<%= cat.id %>">
        <%=cat.name%>
      </option>
    <% end %>
  </select>
  <br>

   <label for="start_date">Start_Date</label>
   <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date%>" min=today>

   <label for="end_date">End_Date</label>
   <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>" min=start_date>

   <br>
   <input type="submit">

</form>
